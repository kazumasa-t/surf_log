<h1>サーフ記録の編集</h1>
<% if notice.present? %>
  <p style="color: red;"><%= notice %></p>
<% end %>

<%= form_with model: @surf_session do |f| %>
  <div>
    <%= f.label :session_date, "日付" %><br>
    <%= f.date_field :session_date %>
  </div>

  <div>
    <%= f.label :duration_minutes, "時間（分）" %><br>
    <%= f.number_field :duration_minutes %>
  </div>

  <div>
    <%= f.label :note, "メモ" %><br>
    <%= f.text_area :note %>
  </div>

  <div>
    <%= f.label :photo, "写真" %><br>
    <%= f.file_field :photo %>
    <% if @surf_session.photo.attached? %>
      <br>
      <%= image_tag @surf_session.photo, style: "max-width: 200px;" %>
    <% end %>
  </div>

  <div>
    <%= f.submit "更新" %>
  </div>
<% end %>

<p><%= link_to "戻る", root_path %></p>
