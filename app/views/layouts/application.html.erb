<!DOCTYPE html>
<html>
  <head>
    <title>SurfLog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Materialize (Material Design style) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  </head>

  <body class="grey lighten-4">
    <nav class="blue">
      <div class="nav-wrapper container">
        <a href="<%= root_path %>" class="brand-logo">Surf Log</a>
        <ul id="nav-mobile" class="right">
          <% if user_signed_in? %>
            <li><%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete } %></li>
          <% else %>
            <li><%= link_to "ログイン", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <main class="container" style="margin-top: 24px;">
      <% if notice.present? %>
        <div class="card-panel teal lighten-4 teal-text text-darken-4 flash-message">
          <%= notice %>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="card-panel red lighten-4 red-text text-darken-4 flash-message">
          <%= alert %>
        </div>
      <% end %>
      <%= yield %>
    </main>

    <!-- Materialize JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
